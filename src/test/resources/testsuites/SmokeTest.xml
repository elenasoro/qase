<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Smoke Test" thread-count="2" parallel="tests">
    <test name="Login">
        <classes>
            <class name="tests.LoginTest"></class>
        </classes>
    </test>
    <test name="Create new project">
        <classes>
            <class name="tests.CreateProjectTest"></class>
        </classes>
    </test>
    <test name="Create new suite">
        <classes>
            <class name="tests.CreateSuiteTest"></class>
        </classes>
    </test>
    <test name="Create new test case">
        <classes>
            <class name="tests.CreateCaseTest"></class>
        </classes>
    </test>
    <test name="Start test run">
        <classes>
            <class name="tests.StartRunTest"></class>
        </classes>
    </test>
    <test name="Mark test case as Passed">
        <classes>
            <class name="tests.PassCaseTest"></class>
        </classes>
    </test>
    <test name="Mark test case as Failed">
        <classes>
            <class name="tests.FailCaseTest"></class>
        </classes>
    </test>
    <test name="Create defect">
        <classes>
            <class name="tests.CreateDefectTest"></class>
        </classes>
    </test>
    <test name="Check defect lifecycle">
        <classes>
            <class name="tests.DefectLifecycleTest"></class>
        </classes>
    </test>
    <test name="Invite new member">
        <classes>
            <class name="tests.InviteMemberTest"></class>
        </classes>
    </test>
</suite>